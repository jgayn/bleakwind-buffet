@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Bleakwind Buffet Menu</h1>

    <p class="combo-announce">Combine any entree, side and drink for $1 off at checkout!</p>

    <form class="menu">

        <div class="sort-section">
            <div class="search">
                <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
                <input type="submit" value="Search" />
            </div>

            <div class="checkboxes" style="padding-top:12px">
                @foreach (string type in ItemFilter.ItemType)
                {
                    <label>
                        <input type="checkbox" name="ItemTypes" value="@type" checked="@Model.ItemTypes.Contains(type)" />
                        @type
                    </label>
                }
            </div>

            <div class="price-sort">
                Price
                <input name="MinPrice" type="number" min="0" max="9.99" step=".5" placeholder="min"/>
                <input name="MaxPrice" type="number" min="0" max="10" step=".5" placeholder="max" />
            </div>

            <div class="calories-sort">
                Calories
                <input name="MinCalories" type="number" min="0" max="999" step="50" placeholder="min" />
                <input name="MaxCalories" type="number" min="0" max="1000" step="50" placeholder="max" />
            </div>
        </div>

        <h2 class="title">Menu</h2>
        <div class="results">

            <ul class="menu-entrees">
                Entrees
                @{
                    foreach (Data.IOrderItem d in @Model.Items)
                    {
                        if (d is Data.Entree)
                        {
                            <li>
                                <div class="menu-item">
                                    <div class="menu-name">
                                        @d.ToString()
                                    </div>
                                    <div class="menu-description">
                                        @d.Description
                                    </div>
                                    <div class="menu-price">
                                        $@d.Price
                                    </div>
                                    <div class="menu-calories">
                                        @d.Calories
                                    </div>
                                </div>
                            </li>
                        }
                    }
                }
            </ul>
            
            <ul class="menu-drinks">
                Drinks
                @{
                    foreach (Data.IOrderItem d in @Model.Items)
                    {
                        if (d is Data.Drink)
                        {
                            <li>
                                <div class="menu-item">
                                    <div class="menu-name">
                                        @d.ToString()
                                    </div>
                                    <div class="menu-description">
                                        @d.Description
                                    </div>
                                    <div class="menu-price">
                                        $@d.Price
                                    </div>
                                    <div class="menu-calories">
                                        @d.Calories
                                    </div>
                                </div>
                            </li>
                        }
                    }
                }
            </ul>
            
            <ul class="menu-sides">
                Sides
                @{
                    foreach (Data.IOrderItem d in @Model.Items)
                    {
                        if (d is Data.Side)
                        {
                            <li>
                                <div class="menu-item">
                                    <div class="menu-name">
                                        @d.ToString()
                                    </div>
                                    <div class="menu-description">
                                        @d.Description
                                    </div>
                                    <div class="menu-price">
                                        $@d.Price
                                    </div>
                                    <div class="menu-calories">
                                        @d.Calories
                                    </div>
                                </div>
                            </li>
                        }
                    }
                }
            </ul>
        </div>


    </form>

    

</div>
